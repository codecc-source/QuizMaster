        </RadioGroup>


        <RadioGroup
            android:id="@+id/question9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="9. How many generations of computers have been invented?"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/ans9a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Five generations"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/ans9b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Four generations"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/ans9c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Six generations"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/response9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </RadioGroup>


        <RadioGroup
            android:id="@+id/question10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="10. Which popular company designed the first CPU?"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/ans10a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/ans10b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AMD"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/ans10c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intel"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/response10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </RadioGroup>

        <Button
            android:id="@+id/quizSubmit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Submit Quiz"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="50sp"
            android:layout_gravity="center"
            android:textColor="@color/teal_200"/>

        <Button
            android:id="@+id/backtostudentmenu2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Back to Student Menu"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"/>

    </LinearLayout>
</ScrollView>
