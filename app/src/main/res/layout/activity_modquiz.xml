                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/response6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </RadioGroup>


        <RadioGroup
            android:id="@+id/question7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="7. What was the name of the first computer programmer?"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/ans7a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ada Lovelace"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/ans7b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charles Babbage"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/ans7c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konrad Zuse"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/response7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </RadioGroup>


        <RadioGroup
            android:id="@+id/question8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="8. Who is called the inventor of the first modern electronic computer?"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/ans8a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charles Babbage"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/ans8b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ada Lovelace"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/ans8c"
                android:layout_width="wrap_content"
